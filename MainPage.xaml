<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tipocalculator.MainPage">

    <VerticalStackLayout>
        <Label Text="Total da conta"/>
        <Entry x:Name="billInput" Placeholder="Insira o valor" Keyboard="Numeric"/>
        <Label Text="Tip"   />
        <Label x:Name="tipoOutput" Text="0.00"/>

        <Label Text="Total"   />
        <Label x:Name="totalOutput" Text="0.00"/>

        <Label Text="Porcentagem de gorjeta"   />
        <Label x:Name="tipoPercent" Text="15%"/>
        <Slider x:Name="tipoPercentSlider" Minimum="0" Maximum="100" Value="15"/>

        <Button Text="15%" />
        <Button Text="20%" />

        <Button x:Name="roundDown" Text="Round Down" />
        <Button x:Name="roundUp" Text="Round Up" />
    </VerticalStackLayout>

</ContentPage>
